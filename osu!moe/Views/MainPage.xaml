<Page x:Class="osu_moe.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:osu_moe.Views"
      Foreground="{DynamicResource TextBrush}"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="MainPage"
      KeepAlive="True">

    <Grid x:Name="ProfileGrid" Background="{DynamicResource AccentColorBrush4}">
        <TextBlock x:Name="UsernameBlock" HorizontalAlignment="Left" Margin="221,289,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" FontSize="36" Foreground="White"/>
        <Button Command="{Binding ApplyCommand}" Margin="531,652,566,10"></Button>
        <Image  x:Name="Avatar" Source="{Binding Avatar}" HorizontalAlignment="Left" Height="100" Margin="44,70,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>
